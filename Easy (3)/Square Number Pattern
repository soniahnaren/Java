public class SquarePattern {
    public static void main(String[] args) {
        int n = 4;
        for (int i = 1; i <= n; i++) {
            for (int j = 1; j <= i; j++) {
                int number = (i * i) + (j - 1) * i;
                System.out.print(number + "\t");
            }
            System.out.println();
        }
    }
}
